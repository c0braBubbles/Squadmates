<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="img/favicon.ico">
    <title>Venner</title>
    <link rel="stylesheet" href="css/bootstrap-5.1.3-dist/css/bootstrap.css">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/chat.css">
    <link rel="stylesheet" href="css/friends.css">

    <body style="overflow-x: hidden; overflow-y:hidden;"></body>
    <style>
        body {
            background-image: url('img/Lawrencium.jpg');
            background-size: cover;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://www.gstatic.com/firebasejs/4.10.1/firebase.js"></script>
    <script src="js/firebase_config.js" type="module"></script>
    <script src="js/usercontroll.js" type="module"></script>
    <script src="js/settings.js" type="module"></script>
</head>
<body>
    <!-- BLITT GJORT OM TIL PARTIAL -->
    <%- include('partials/headerp'); %>
    <%- include('partials/instillingerp'); %>

        <div class="container-fluid" id="first-layer">

            <div class="row d-flex mx-auto" style="justify-content:center !important;">

                <div class="col-3 leftCol">

                    <!-- Denne boksen skal bare inneholde en statisk tekst "Følger" -->
                    <div class="row" id="tl-col">
                        <div class="chat-info d-flex ms-auto my-auto" style="background: #202124;">
                            <h3>Brukere du følger</h3>
                        </div>
                    </div>
                    <!-- Denne boksen skal være scrollable og inneholde en liste med alle du følger -->
                    <div class="row" id="bl-col" style="background: #111;">

                        <ul class="list-group" style="margin:10px; width: calc(100% - 10px)" id="friendsList">
                            
                        </ul>

                    </div>

                </div>
                <div class="col-6 skallering">

                    <!-- Denne boksen skal inneholde et søkefelt, form? -->
                    <div class="row border-bottom border-dark border-2" id="tr-col">
                        <div class="chat-info d-flex me-auto my-auto w-100 mx-auto" style="background: #202124;">
                            <input id="søkefeltbruker" class="src-after-person sticky-top text-light w-100" type="search"
                                placeholder="Søk etter brukere" style="z-index:1 !important;">

                            <button type="button" class="btn btn-dark" id="btnSok">Søk</button>
                        </div>

                    </div>
                    
                    <!-- Denne boksen skal inneholde de vennene du kan søke etter -->
                    <div class="row bg-dark" id="br-col"> 

                        <div class="src-res" style="height:77vh; overflow-y: scroll;">

                            <ul class="list-group mt-1 person-list" id="ul_result" style="display: block;">
                            </ul>

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <script type="text/javascript" src="css/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
        <script type="module" src="js/friends.js"></script>
        <script src="js/action.js"></script>
</body>
</html>